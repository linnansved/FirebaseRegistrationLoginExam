    <Button
        android:id="@+id/UserClick"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignBaseline="@id/profile_image"
        android:layout_alignEnd="@id/profile_image"
        android:background="@drawable/setting_gear"
        android:textColor="#FFFFFF"
        android:onClick="seeUser_Click"/>

    <TextView
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:id="@+id/textSqParent"
        android:textAlignment="center"
        android:typeface="monospace"
        android:layout_below="@id/profile_image"
        android:layout_centerHorizontal="true"
        android:textColor="#0080ff"
        android:gravity="clip_vertical"
        android:background="@drawable/text_back"
        android:elegantTextHeight="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Type the word 'parent' to enter admin page"
        />
    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Submit"
        android:id="@+id/enterBtn"
        android:background="@drawable/green_but"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:onClick="testParent"
        android:layout_alignTop="@id/textSqParent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140dp"/>

        <EditText
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:id="@+id/answerParent"
            android:hint="Type answer"
            android:textAlignment="center"
            android:typeface="monospace"
            android:layout_alignTop="@id/textSqParent"
            android:inputType="text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="90dp"
            />


