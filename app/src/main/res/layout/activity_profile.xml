<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.gnirt69.firebaseregistrationloginexam.ProfileActivity"
    android:background="@drawable/background">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/alva"
        app:civ_border_width="6dp"
        app:civ_border_color="#FFFFFF"
        android:layout_above="@+id/linear"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/unlock"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/unlock"
        android:layout_alignParentEnd="true"
        android:clickable="true"
        android:onClick="toChild_Click"/>

    <ImageView
        android:id="@+id/lock"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/lock"
        android:layout_alignParentEnd="true"
        android:clickable="true"
        android:onClick="toParent_Click"/>
    <Button
        android:id="@+id/LogOutBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/red_but"
        android:textColor="#FFFFFF"
        android:text="Log Out" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:textColor="#FFFFFF"
        android:id="@+id/tvNickname"
        android:layout_below="@+id/profile_image"
        android:layout_centerHorizontal="true" />


    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/album1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/cloudblue"
        app:civ_border_width="6dp"
        app:civ_border_color="#FFFFFF"
        android:layout_below="@id/tvNickname"
        android:layout_marginLeft="35dp"
        android:clickable="true"
        android:onClick="toGallery_Click"
        />
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/album2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/dog"
        app:civ_border_width="6dp"
        app:civ_border_color="#FFFFFF"
        android:layout_below="@id/tvNickname"
        android:layout_toRightOf="@id/album1"
        android:layout_toEndOf="@id/album1"
        android:layout_marginLeft="30dp"
        />
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/album3"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/carrot"
        app:civ_border_width="6dp"
        app:civ_border_color="#FFFFFF"
        android:layout_below="@id/album1"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="10dp"
        />
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/album4"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/plus"
        app:civ_border_width="6dp"
        app:civ_border_color="#FFFFFF"
        android:layout_below="@id/album2"
        android:layout_toRightOf="@id/album3"
        android:layout_toEndOf="@id/album3"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:onClick="addCard_Click"

        />


    <Button
        android:id="@+id/UserClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="See Userinfo"
        android:layout_below="@+id/album4"
        android:layout_marginTop="60dp"
        android:background="@drawable/blue_but"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:onClick="seeUser_Click"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/textSqParent"
        android:textAlignment="center"
        android:layout_centerInParent="true"
        android:background="@drawable/whiteback"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Type parent to enter admin page"/>


        <EditText
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/answerParent"
            android:layout_centerInParent="true"
            android:inputType="text"
            />
    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="ENTER"
        android:id="@+id/enterBtn"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/answerParent"
        android:background="@drawable/green_but"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:onClick="testParent"/>

    <Button
    android:layout_width="100dp"
    android:layout_height="50dp"
    android:text="MARKUS"
    android:id="@+id/dynamicLinkBtn"
    android:layout_centerHorizontal="true"
    android:layout_below="@id/UserClick"
    android:background="@drawable/green_but"
    android:textColor="#FFFFFF"
    android:textStyle="bold"
    android:onClick="dynamicLink_Click"/>

</RelativeLayout>
