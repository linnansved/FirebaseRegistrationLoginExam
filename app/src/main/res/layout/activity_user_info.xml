<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gnirt69.firebaseregistrationloginexam.UserInfo"
    android:background="@drawable/background">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/alva"
        app:civ_border_width="6dp"
        app:civ_border_color="#FFFFFF"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true" />
    <ImageView
        android:id="@+id/bannerplane"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/your_info"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp" />

    <ImageView
        android:id="@+id/leaf1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/leaf"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/bannerplane"
        android:layout_marginLeft="40dp"/>

    <TextView
        android:id="@+id/infoEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/leaf1"
        android:layout_below="@id/bannerplane"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:ems="10"
        android:layout_marginLeft="10dp"
        android:typeface="monospace"
        android:textColor="#FFFFFF"
        android:text="Your e-mail is:"
        />


    <TextView
        android:id="@+id/currentEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/infoEmail"
        android:layout_toRightOf="@id/leaf1"
        android:layout_marginTop="10dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:ems="10"
        android:layout_marginLeft="10dp"
        android:typeface="monospace"
        android:textColor="#0080ff"
        android:text="E-mail"/>


    <ImageView
        android:id="@+id/leaf2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/leaf"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/currentEmail"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"/>

    <TextView
        android:id="@+id/infoNickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/leaf2"
        android:layout_below="@id/currentEmail"
        android:layout_marginTop="40dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:ems="10"
        android:layout_marginLeft="10dp"
        android:typeface="monospace"
        android:textColor="#FFFFFF"
        android:text="Your nickname is:"
        />

    <TextView
        android:id="@+id/currentNickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/infoNickname"
        android:layout_centerInParent="true"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:text="Nickname"
        android:textColor="#0080ff"
        android:textStyle="bold"
        android:layout_toRightOf="@id/leaf2"
        android:layout_marginLeft="10dp"
        android:typeface="monospace"
        android:textSize="20sp" />


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="70dp"
        android:src="@drawable/pratbubbla1"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:id="@+id/prat" />

    <Button
        android:id="@+id/saveEditUser"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/setting_gear"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:onClick="editUser_Click"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/currentNickname"
        android:layout_alignStart="@+id/leaf2" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/bird"
        android:id="@+id/greenbird"
        android:clickable="true"
        android:onClick="hideShowBubble"/>



</RelativeLayout>

