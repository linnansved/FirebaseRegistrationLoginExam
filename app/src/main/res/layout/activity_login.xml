<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.gnirt69.firebaseregistrationloginexam.LoginActivity"
    android:background="@drawable/background">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/tapetaplogo"
        android:layout_above="@+id/linear"
        android:id="@+id/tapetaplogo"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/cloud2"
        android:layout_centerInParent="true"

         />

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/whitesq2"
            android:layout_width="250dp"
            android:layout_height="300dp"
            android:background="@android:color/transparent"
            />

    </LinearLayout>

    <ImageView
        android:id="@+id/bannerplane"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/log_in"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp" />

    <EditText
        android:id="@+id/txtEmailLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter email"
        android:inputType="textEmailAddress"
        android:layout_alignStart="@+id/txtPasswordLogin"
        android:layout_alignEnd="@+id/txtPasswordLogin"
        android:textAlignment="center"
        android:ems="10"
        android:typeface="monospace"
        android:layout_below="@+id/bannerplane"
        />

    <EditText
        android:id="@+id/txtPasswordLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="Enter password"
        android:layout_centerInParent="true"
        android:textAlignment="center"
        android:typeface="monospace"
        android:layout_below="@+id/txtEmailLogin"
        />


    <TextView
        android:id="@+id/new_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtPasswordLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text=" Add a new user!"
        android:onClick="btnRegistration_Click"
        android:clickable="true"/>

    <TextView
        android:id="@+id/forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/new_user"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text=" Forgot your password?"
        android:clickable="true"
        android:onClick="btnForgotPwd_Click"/>

    <Button
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:text="Log in"
        android:id="@+id/btnUserLogin"
        android:onClick="btnUserLogin_Click"
        android:layout_below="@+id/new_user"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/green_but"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <Button
        android:id="@+id/new_us_but"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/txtPasswordLogin"
        android:layout_marginTop="8dp"
        android:layout_toLeftOf="@id/new_user"
        android:background="@drawable/blue_but_small"
        android:text="+"
        android:textColor="#0080ff"
        android:textStyle="bold"
        android:onClick="btnRegistration_Click" />

    <Button
        android:id="@+id/forgot_pas_but"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/new_user"
        android:layout_marginTop="8dp"
        android:layout_toLeftOf="@id/forgot_password"
        android:background="@drawable/blue_but_small"
        android:text="@string/question"
        android:textColor="#0080ff"
        android:textStyle="bold"
        android:onClick="btnForgotPwd_Click"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:src="@drawable/startinfo_bubbla"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:id="@+id/prat" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/bird"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:id="@+id/greenbird"
        android:clickable="true"
        android:onClick="hideShowBubble"/>

</RelativeLayout>


