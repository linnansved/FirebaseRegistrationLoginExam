<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.gnirt69.firebaseregistrationloginexam.LoginActivity"
    android:background="@drawable/background">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/tapetaplogo"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/linear" />


    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/whitesq2"
            android:layout_width="250dp"
            android:layout_height="300dp"
            android:src="@drawable/whiteback"/>

    </LinearLayout>
    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/linear"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:text="LOG IN BELOW!"
        android:textAlignment="center"
        android:textColor="#0080ff"
        android:textStyle="bold"
        android:typeface="monospace" />


    <EditText
        android:id="@+id/txtEmailLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Enter email"
        android:inputType="textEmailAddress"
        android:layout_alignStart="@+id/txtPasswordLogin"
        android:layout_alignEnd="@+id/txtPasswordLogin"
        android:textAlignment="center"
        android:typeface="monospace"
        android:layout_below="@+id/heading"
        />

    <EditText
        android:id="@+id/txtPasswordLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="Enter password"
        android:layout_centerInParent="true"
        android:textAlignment="center"
        android:typeface="monospace"
        android:layout_below="@+id/txtEmailLogin" />

    <TextView
        android:id="@+id/new_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtPasswordLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text=" Add a new user!"
        android:onClick="btnRegistration_Click"
        android:clickable="true"/>

    <TextView
        android:id="@+id/forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/new_user"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text=" Forgot your password?"
        android:clickable="true"
        android:onClick="gotoForgotPass"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log in"
        android:id="@+id/btnUserLogin"
        android:onClick="btnUserLogin_Click"
        android:layout_below="@+id/linear"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/green_but"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <Button
        android:id="@+id/new_us_but"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/txtPasswordLogin"
        android:layout_marginTop="23dp"
        android:layout_toLeftOf="@id/new_user"
        android:background="@drawable/blue_but_small"
        android:text="+"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:onClick="btnRegistration_Click" />

    <Button
        android:id="@+id/forgot_pas_but"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/new_user"
        android:layout_marginTop="8dp"
        android:layout_toLeftOf="@id/forgot_password"
        android:background="@drawable/blue_but_small"
        android:text="@string/question"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:onClick="gotoForgotPass"/>

</RelativeLayout>


