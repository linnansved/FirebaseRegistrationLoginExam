<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gnirt69.firebaseregistrationloginexam.addAlbum"
    android:background="@drawable/background">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/cloud2"
        android:layout_centerInParent="true"
        />


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/red_bird"
        android:layout_centerInParent="true"
        />
    <TextView
        android:id="@+id/info"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="Here you can add a new album!"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:typeface="monospace"
        />
    <Button
        android:id="@+id/createAlbumBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="53dp"
        android:text="Create Album"
        android:onClick="onClickCreateAlbum"
        tools:layout_editor_absoluteX="107dp"
        android:background="@drawable/blue_but"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_centerInParent="true"/>
    <EditText
        android:id="@+id/albumName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter album name"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:typeface="monospace"
        android:textColor="#0080ff"
        android:layout_alignBottom="@+id/createAlbumBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="70dp" />



</RelativeLayout>