<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".AddPhoto"
    android:background="@drawable/background">

    <ImageView
        android:id="@+id/tapetaplogo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/tapetaplogo"
        android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/RecordButton"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@id/tapetaplogo"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/record"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:onClick="onClickRecord"/>

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/chooseImage"
        android:layout_below="@id/tapetaplogo"
        android:layout_toLeftOf="@id/RecordButton"
        android:background="@mipmap/camera"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:onClick="onClickImage"/>

        <Button
            android:id="@+id/PlayButton"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@id/tapetaplogo"
            android:layout_toRightOf="@id/RecordButton"
            android:layout_toEndOf="@id/RecordButton"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/play"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:onClick="onClickPlay"/>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/imageView"
            android:layout_below="@id/RecordButton"
            android:layout_centerHorizontal="true"
            tools:layout_editor_absoluteY="8dp"
            tools:layout_editor_absoluteX="8dp"
            android:scaleType="centerInside" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/editText"
        android:background="@drawable/whiteback"
        android:layout_below="@id/imageView"
        android:layout_marginTop="5dp"
        android:hint="Enter text!"
        android:textAlignment="center"
        android:typeface="monospace"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/UploadButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/editText"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/upload"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:onClick="onClickUpload"
        />


</RelativeLayout>