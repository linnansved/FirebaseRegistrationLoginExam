<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".EditUser"
    android:background="@drawable/background">

    <ImageView
        android:id="@+id/tapetaplogo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/tapetaplogo"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tapetaplogo"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonChoose"
            android:text="Choose photo"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/green_but"
            android:textColor="#FFFFFF"
            android:textStyle="bold"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonUpload"
            android:text="Upload photo"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/green_but"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/showUploadedPic"
            tools:layout_editor_absoluteY="8dp"
            tools:layout_editor_absoluteX="8dp" />

        <EditText
            android:id="@+id/photoString"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Enter word"
            android:focusableInTouchMode="true"
            android:imeActionId="@+id/login"
            android:imeOptions="actionUnspecified"
            android:inputType="textPassword"
            android:maxLines="1"
            android:singleLine="true"
            android:textAlignment="center"
            android:typeface="monospace"
            />

        <Button
            android:id="@+id/saveString"
            android:layout_gravity="center_horizontal"
            style="?android:textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/green_but"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:text="    SAVE WORD   "/>


        <Button
            android:id="@+id/addPhoto"
            android:layout_gravity="center_horizontal"
            style="?android:textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_big_but"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:text="    Upload photo   "/>
        <Button
            android:id="@+id/addAudio"
            android:layout_gravity="center_horizontal"
            style="?android:textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_big_but"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:text="    Record the word   "/>
        <Button
            android:id="@+id/addString"
            android:layout_gravity="center_horizontal"
            style="?android:textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_big_but"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:text="   Set name of word   "/>


    </LinearLayout>

</RelativeLayout>