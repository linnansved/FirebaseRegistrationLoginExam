<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".EditUser"
    android:background="@drawable/background">


    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:civ_border_width="6dp"
        app:civ_border_color="#FFFFFF"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/tapetaplogo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true" />



    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:id="@+id/picView"
        android:layout_centerHorizontal="true"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp"
        android:scaleType="centerInside" />

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tapetaplogo"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <EditText
            android:id="@+id/old_email"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:ems="10"
            android:hint="Enter old e-mail"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:textAlignment="center"
            android:typeface="monospace"
            android:singleLine="true"
            />


        <EditText
            android:id="@+id/new_email"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Enter new e-mail"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:textAlignment="center"
            android:typeface="monospace"
            android:singleLine="true"
            />


        <EditText
            android:id="@+id/password"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Enter old password"
            android:focusableInTouchMode="true"
            android:imeActionId="@+id/login"
            android:imeOptions="actionUnspecified"
            android:inputType="textPassword"
            android:maxLines="1"
            android:singleLine="true"
            android:textAlignment="center"
            android:typeface="monospace"
            />

        <EditText
            android:id="@+id/newPassword"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Enter new password"
            android:focusableInTouchMode="true"
            android:imeActionId="@+id/login"
            android:imeOptions="actionUnspecified"
            android:inputType="textPassword"
            android:maxLines="1"
            android:singleLine="true"
            android:textAlignment="center"
            android:typeface="monospace"
            />

        <EditText
            android:id="@+id/newNickname"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Enter new nickname"
            android:focusableInTouchMode="true"
            android:imeActionId="@+id/login"
            android:imeOptions="actionUnspecified"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:singleLine="true"
            android:textAlignment="center"
            android:typeface="monospace"
            />

        <Button
            android:id="@+id/changeEmail"
            android:layout_gravity="center_horizontal"
            style="?android:textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/green_but"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:text="    SAVE CHANGES   "/>

        <Button
            android:id="@+id/changePass"
            android:layout_gravity="center_horizontal"
            style="?android:textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/green_but"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:text="    SAVE CHANGES   "/>

        <Button
            android:id="@+id/changeNick"
            android:layout_gravity="center_horizontal"
            style="?android:textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/green_but"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:text="    SAVE CHANGES   "/>

        <Button
            android:id="@+id/uploadPic"
            android:layout_gravity="center_horizontal"
            style="?android:textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/green_but"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:onClick="onClickUploadProfilePic"
            android:text="    SAVE CHANGES   "/>



        <Button
            android:id="@+id/change_email_button"
            android:layout_gravity="center_horizontal"
            style="?android:textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_big_but"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:text="    CHANGE E-MAIL   "/>
        <Button
            android:id="@+id/change_password_button"
            android:layout_gravity="center_horizontal"
            style="?android:textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_big_but"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:text="    CHANGE PASSWORD   "/>

        <Button
            android:id="@+id/change_nickname_button"
            android:layout_gravity="center_horizontal"
            style="?android:textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_big_but"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:text=" CHANGE NICKNAME "/>

        <Button
            android:id="@+id/addProfilePic"
            android:layout_gravity="center_horizontal"
            style="?android:textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_big_but"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:onClick="onClickProfileImage"
            android:text="    CHANGE PROFILE PICTURE   "/>


    </LinearLayout>
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="70dp"
        android:src="@drawable/edituser_info"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:id="@+id/prat" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/bird"
        android:id="@+id/greenbird"
        android:clickable="true"
        android:onClick="hideShowBubble"/>

</RelativeLayout>