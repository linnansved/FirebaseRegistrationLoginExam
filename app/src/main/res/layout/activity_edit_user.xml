<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gnirt69.firebaseregistrationloginexam.EditUser"
    android:background="@drawable/background">

<LinearLayout
    android:id="@+id/linear"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true">

    <ImageView
        android:id="@+id/whitesq2"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/whiteback" />
</LinearLayout>

<TextView
    android:id="@+id/heading"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignTop="@+id/linear"
    android:layout_marginTop="20dp"
    android:layout_centerInParent="true"
    android:ems="10"
    android:text="User Info"
    android:textAlignment="center"
    android:textColor="#0080ff"
    android:textStyle="bold"
    android:typeface="monospace"
    android:background="@android:color/transparent"/>

<EditText
    android:id="@+id/editNickname"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignTop="@+id/linear"
    android:layout_centerInParent="true"
    android:layout_marginTop="50dp"
    android:ems="10"
    android:hint="Edit nickname"
    android:inputType="textPersonName"
    android:textAlignment="center"
    android:typeface="monospace"/>

<EditText
    android:id="@+id/editPassword"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignTop="@+id/linear"
    android:layout_centerInParent="true"
    android:layout_marginTop="100dp"
    android:ems="10"
    android:hint="Edit pass"
    android:inputType="textPassword"
    android:textAlignment="center" />

<EditText
    android:id="@+id/editEmail"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignTop="@+id/linear"
    android:layout_centerInParent="true"
    android:layout_marginTop="150dp"
    android:ems="10"
    android:hint="Edit email"
    android:inputType="textEmailAddress"
    android:textAlignment="center"
    android:typeface="monospace"/>

<Button
    android:id="@+id/saveEditUser"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/linear"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="20dp"
    android:background="@drawable/red_but"
    android:text="SAVE INFO"
    android:textColor="#FFFFFF"
    android:textStyle="bold" />
</RelativeLayout>

