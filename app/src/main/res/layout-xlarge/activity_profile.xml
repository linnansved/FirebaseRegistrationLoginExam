<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.gnirt69.firebaseregistrationloginexam.ProfileActivity"
        android:background="@drawable/background">


        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/alva"
            app:civ_border_width="10dp"
            app:civ_border_color="#FFFFFF"
            android:layout_above="@+id/linear"
            android:layout_centerHorizontal="true" />


        <ImageView
            android:id="@+id/unlock"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/unlock"
            android:layout_alignParentEnd="true"
            android:clickable="true"
            android:onClick="toChild_Click"/>

        <ImageView
            android:id="@+id/lock"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/lock"
            android:layout_alignParentEnd="true"
            android:clickable="true"
            android:onClick="toParent_Click"/>
        <Button
            android:id="@+id/LogOutBtn"
            android:layout_width="170dp"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/red_but"
            android:textColor="#FFFFFF"
            android:text="Log Out"
            android:textSize="25dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=""
            android:textColor="#FFFFFF"
            android:id="@+id/tvNickname"
            android:textSize="30dp"
            android:layout_below="@+id/profile_image"
            android:layout_centerHorizontal="true" />


        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/album1"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/info"
            app:civ_border_width="10dp"
            app:civ_border_color="#FFFFFF"
            android:layout_below="@id/tvNickname"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="100dp"
            android:clickable="true"
            android:onClick="toInstructions"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Information"
            android:textSize="25dp"
            android:textColor="#0080ff"
            android:id="@+id/infoText"
            android:layout_below="@+id/album1"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="135dp"
            android:textAlignment="center"/>


        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/album2"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/plus"
            app:civ_border_width="10dp"
            app:civ_border_color="#FFFFFF"
            android:layout_below="@id/tvNickname"
            android:layout_alignParentRight="true"
            android:layout_marginRight="100dp"
            android:clickable="true"
            android:onClick="addCard_Click"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Album"
            android:textSize="25dp"
            android:textColor="#0080ff"
            android:id="@+id/plusText"
            android:layout_below="@+id/album1"
            android:layout_alignParentRight="true"
            android:layout_marginRight="135dp"
            android:textAlignment="center"/>

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/AddAlbum1"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/alb1"
            app:civ_border_width="10dp"
            app:civ_border_color="#FFFFFF"
            android:layout_below="@id/album1"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="40dp"
            android:clickable="true"
            android:onClick="toGallery_Click"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ALBUM 1"
            android:textSize="25dp"
            android:textColor="#0080ff"
            android:id="@+id/alb1Text"
            android:layout_below="@+id/AddAlbum1"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="150dp"
            android:textAlignment="center"/>

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/AddAlbum2"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/alb2"
            app:civ_border_width="10dp"
            app:civ_border_color="#FFFFFF"
            android:layout_below="@id/album1"
            android:layout_alignParentRight="true"
            android:layout_marginRight="100dp"
            android:layout_marginTop="35dp"
            android:clickable="true"
            android:onClick="toGallery_Click"/>

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="ALBUM 2"
            android:textSize="25dp"
            android:textColor="#0080ff"
            android:id="@+id/alb2Text"
            android:layout_below="@+id/AddAlbum2"
            android:layout_alignParentRight="true"
            android:layout_marginRight="150dp"
            android:textAlignment="center"/>

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/AddAlbum3"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/alb3"
            app:civ_border_width="10dp"
            app:civ_border_color="#FFFFFF"
            android:layout_below="@id/AddAlbum1"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="35dp"
            android:clickable="true"
            android:onClick="toGallery_Click"
            />
        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="ALBUM 3"
            android:textSize="25dp"
            android:textColor="#0080ff"
            android:id="@+id/alb3Text"
            android:layout_below="@+id/AddAlbum3"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="150dp"
            android:textAlignment="center"/>


        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/AddAlbum4"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/alb4"
            app:civ_border_width="10dp"
            app:civ_border_color="#FFFFFF"
            android:layout_below="@id/AddAlbum2"
            android:layout_alignParentRight="true"
            android:layout_marginRight="100dp"
            android:layout_marginTop="35dp"
            android:clickable="true"
            android:onClick="toGallery_Click"/>

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="ALBUM 4"
            android:textSize="25dp"
            android:textColor="#0080ff"
            android:id="@+id/alb4Text"
            android:layout_below="@+id/AddAlbum4"
            android:layout_alignParentRight="true"
            android:layout_marginRight="150dp"
            android:textAlignment="center"/>

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/AddAlbum5"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/alb5"
            app:civ_border_width="10dp"
            app:civ_border_color="#FFFFFF"
            android:layout_below="@id/AddAlbum3"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="35dp"
            android:clickable="true"
            android:onClick="toGallery_Click"
            />

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="ALBUM 5"
            android:textSize="25dp"
            android:textColor="#0080ff"
            android:id="@+id/alb5Text"
            android:layout_below="@+id/AddAlbum5"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="150dp"
            android:textAlignment="center"/>

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/AddAlbum6"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/alb6"
            app:civ_border_width="10dp"
            app:civ_border_color="#FFFFFF"
            android:layout_below="@id/AddAlbum4"
            android:layout_alignParentRight="true"
            android:layout_marginRight="100dp"
            android:layout_marginTop="35dp"
            android:clickable="true"
            android:onClick="toGallery_Click"/>

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="ALBUM 6"
            android:textSize="25dp"
            android:textColor="#0080ff"
            android:id="@+id/alb6Text"
            android:layout_below="@+id/AddAlbum6"
            android:layout_alignParentRight="true"
            android:layout_marginRight="150dp"
            android:textAlignment="center"/>

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/AddAlbum7"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/alb7"
            app:civ_border_width="10dp"
            app:civ_border_color="#FFFFFF"
            android:layout_below="@id/AddAlbum5"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="35dp"
            android:clickable="true"
            android:onClick="toGallery_Click"
            />
        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="ALBUM 7"
            android:textSize="25dp"
            android:textColor="#0080ff"
            android:id="@+id/alb7Text"
            android:layout_below="@+id/AddAlbum7"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="150dp"
            android:textAlignment="center"/>

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/AddAlbum8"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/alb8"
            app:civ_border_width="10dp"
            app:civ_border_color="#FFFFFF"
            android:layout_below="@id/AddAlbum6"
            android:layout_alignParentRight="true"
            android:layout_marginRight="100dp"
            android:layout_marginTop="35dp"
            android:clickable="true"
            android:onClick="toGallery_Click"/>
        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="ALBUM 8"
            android:textSize="25dp"
            android:textColor="#0080ff"
            android:id="@+id/alb8Text"
            android:layout_below="@+id/AddAlbum8"
            android:layout_alignParentRight="true"
            android:layout_marginRight="150dp"
            android:textAlignment="center"/>


        <Button
            android:id="@+id/UserClick"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignBaseline="@id/profile_image"
            android:layout_alignEnd="@id/profile_image"
            android:background="@drawable/setting_gear"
            android:textColor="#FFFFFF"
            android:onClick="seeUser_Click"/>

        <TextView
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:id="@+id/textSqParent"
            android:textAlignment="center"
            android:typeface="monospace"
            android:layout_below="@id/profile_image"
            android:layout_marginTop="120dp"
            android:layout_centerHorizontal="true"
            android:textColor="#0080ff"
            android:gravity="clip_vertical"
            android:background="@drawable/text_back"
            android:elegantTextHeight="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Type the word 'parent' to enter admin page"
            android:textSize="30dp"
            />
        <Button
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="Submit"
            android:textSize="25dp"
            android:id="@+id/enterBtn"
            android:background="@drawable/green_but"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:onClick="testParent"
            android:layout_alignTop="@id/textSqParent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="220dp"/>

        <EditText
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:id="@+id/answerParent"
            android:hint="Type answer"
            android:textSize="30dp"
            android:textAlignment="center"
            android:typeface="monospace"
            android:layout_alignTop="@id/textSqParent"
            android:inputType="text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="90dp"
            />


    </RelativeLayout>
</ScrollView>